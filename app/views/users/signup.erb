<div class="has-text-centered">
  <h1 class="is-size-1">Create an Account</h1>
  <%if @errors%>
  <%@errors.each do |error|%>
  <h2 class="has-text-danger is-size-2"><%=error%></h2>
  <%end%>
  <%end%>
<form method="POST" action="/signup">
  <div class="field">
    <div class="control">
      <input type="text" name="username" class="is-size-5" placeholder="Username:">
    </div>
    <div class="control">
      <input type="password" name="password"  class="is-size-5" placeholder="Password:">
    </div>
  </div>
  <div class="field">
    <div class="control">
      <input type="submit" value="Sign Up" class="button is-success">
    </div>
  </div>
</form>
